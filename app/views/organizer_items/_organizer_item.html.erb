<div class="row clearfix">
  <% if organizer_item.completed? %>
    <div class="complete">
      <%= link_to "Mark as Complete", complete_organizer_list_organizer_item_path(@organizer_list, organizer_item.id),
                  method: :patch %>
  </div>
      <div class="organizer_item">
        <p style="opacity: 0.4;"><strike><%= organizer_item.content %></strike></p>
      </div>
      <div class="trash">
        <%=  link_to 'Delete', organizer_list_organizer_item_path(@organizer_list, organizer_item.id),
                     method:  :delete, data: { confirm: "Are you sure?" } %>
      </div>
  <% else %>
      <div class="complete">
        <%= link_to "Mark as Complete", complete_organizer_list_organizer_item_path(@organizer_list, organizer_item.id),
                    method: :patch %>
      </div>
      <div class="organizer_item">
        <p><%= organizer_item.content %></p>
      </div>
      <div class="trash">
        <%=  link_to 'Delete', organizer_list_organizer_item_path(@organizer_list, organizer_item.id),
                     method:  :delete, data: { confirm: "Are you sure?" } %>
      </div>
  <% end %>
</div>
